.authorwrap{
  position: fixed;
  width:100%;
  height:100%;
  left:0;
  top:0;
  z-index:2;
  background-color:#EEEEEE;
  box-sizing: border-box;
  padding:60rpx 30rpx 0;
}
.headimg{
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto 30rpx;
}
.oneline{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis
}
.fourline{
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  word-break: break-all;
  text-overflow: ellipsis;
}
.title{
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  color:#444444;
}
.info{
  box-sizing: border-box;
  font-size: 28rpx;
  color:#444444;
  margin-bottom: 60rpx;
}
.btn{
  position: relative;
  width:100%;
  height: 92rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  background-color: rgb(30,106,255);
  color:white;
  font-size: 30rpx;
}
.btncls{
  background-color: rgba(30,106,255,0.8);
}
.bb {
  opacity: 0;
  width:100%!important;
  height:100%!important;
  position: absolute;
  left:0;
  top:0;
}