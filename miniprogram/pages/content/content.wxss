/* pages/content/content.wxss */
page{
  height:100%;
  padding:0;
  margin:0;
}
.wrap{
  height:100%;
  position:relative;
}
.bgImg{
  height:100%;
  width:100%;
  display: block;
}
.op{
  position: absolute;
  width:90%;
  top:50rpx;
  text-align: center;
  border:4rpx solid white;
  background-color: rgba(255,255,255,0.5);
  border-radius: 10rpx;
  padding:20rpx;
  box-sizing: border-box;
}
.transcenter{
  left:50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
}
.title{
  font-size: 50rpx;
  color:white;
  margin-bottom: 20rpx;
}
.txt{
  text-align: left;
  background-color: rgba(255,255,255,0.7);
  width:100%;
  padding:20rpx;
  box-sizing: border-box;
}
.btn::before{
  display: block;
  content:'';
  height: 100rpx;
  width:4rpx;
  background-color:white;
  position: absolute;
  top:-100rpx;
  left:50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
}
.btn{
  color:white;
  position:absolute;
  bottom:-250rpx;
  border-radius: 50%;
  width:150rpx;
  height:150rpx;
  background-color: rgba(255,255,255,0.5);
  line-height: 150rpx;
  text-align: center;
  border:4rpx solid white;
  box-sizing: border-box;
}
.btnactive{
  background-color: rgba(255,255,255,0.7);
}