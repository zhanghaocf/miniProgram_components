/* pages/share/share.wxss */
page{
  background-color: #dddddb;
}
swiper{
  height:50rpx;
}
.content{
  text-align: center;
  color:white;
}
.contwrap{
  background-color: rgba(255,255,255,0.5);
  border:10rpx solid white;
  border-radius: 20rpx;
  padding:20rpx;
  text-align: center;
  position:relative;
}
.opt::before{
  display: block;
  content:'';
  width:10rpx;
  height:60rpx;
  background-color: white;
  position:absolute;
  top:-60rpx;
  left:50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
}
.opt{
  background-color: rgba(255,255,255,0.5);
  position:absolute;
  bottom:-180rpx;
  left:30%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  width:150rpx;
  height:100rpx;
  border:10rpx solid white;
  border-radius: 20rpx;
  line-height: 100rpx;
  text-align: center;
  color:green;
  letter-spacing: 10rpx;
}
.optshare{
  left:70%;
}
.btnshare{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  opacity: 0;
}
.optactive{
  background-color: rgba(255,255,255,0.7);
}